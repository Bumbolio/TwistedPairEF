@model IEnumerable<TwistedPairEF.Models.PairModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Pairs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PairNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstBinderColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondBinderColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PairNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstBinderColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondBinderColor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
